{
    "name": "sakiengine-syntax",
    "displayName": "SakiEngine Syntax",
    "description": "Syntax highlighting for SakiEngine script files (.sks) with fx filter effects, timer keyword support, NVL mode keywords and first-line identifier support",
    "version": "0.2.4",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "saki-script",
                "aliases": ["Saki Script", "sks"],
                "extensions": [".sks"],
                "configuration": "./language-configuration.json",
                "firstLine": "^//\\w+//.*"
            }
        ],
        "grammars": [
            {
                "language": "saki-script",
                "scopeName": "source.sks",
                "path": "./syntaxes/saki-script.tmLanguage.json"
            }
        ],
        "colors": [
            {
                "id": "sakiEngine.configKey",
                "description": "Color for configuration keys",
                "defaults": {
                    "dark": "#569CD6",
                    "light": "#0000FF"
                }
            },
            {
                "id": "sakiEngine.characterName",
                "description": "Color for character names",
                "defaults": {
                    "dark": "#4EC9B0",
                    "light": "#008B8B"
                }
            },
            {
                "id": "sakiEngine.dialogue",
                "description": "Color for dialogue text",
                "defaults": {
                    "dark": "#CE9178",
                    "light": "#A31515"
                }
            },
            {
                "id": "sakiEngine.firstLineIdentifier",
                "description": "Color for first line identifiers",
                "defaults": {
                    "dark": "#DCDCAA",
                    "light": "#795E26"
                }
            }
        ]
    }
}