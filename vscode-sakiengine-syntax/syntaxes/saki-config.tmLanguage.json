{
    "scopeName": "source.saki-config",
    "fileTypes": ["skc"],
    "name": "Saki Config",
    "patterns": [
        {
            "include": "#color-values"
        },
        {
            "comment": "Configuration key",
            "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*(:)",
            "captures": {
                "1": {
                    "name": "entity.name.function.saki-config"
                },
                "2": {
                    "name": "punctuation.separator.key-value.saki-config"
                }
            }
        },
        {
            "comment": "Attribute name with equals",
            "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(=)",
            "captures": {
                "1": {
                    "name": "variable.parameter.saki-config"
                },
                "2": {
                    "name": "punctuation.separator.key-value.saki-config"
                }
            }
        },
        {
            "comment": "Numeric values",
            "match": "\\b\\d+(?:\\.\\d+)?\\b",
            "name": "constant.numeric.saki-config"
        },
        {
            "comment": "String values",
            "match": "\\b[a-zA-Z_][a-zA-Z0-9_\\-]*\\b",
            "name": "string.unquoted.saki-config"
        }
    ],
    "repository": {
        "color-values": {
            "patterns": [
                {
                    "comment": "Hex color value in quotes",
                    "match": "(\")(#[0-9a-fA-F]{3,8})(\")",
                    "name": "meta.color",
                    "captures": {
                        "1": { "name": "punctuation.definition.string.begin.saki-config" },
                        "2": { "name": "constant.other.color.saki-config" },
                        "3": { "name": "punctuation.definition.string.end.saki-config" }
                    }
                },
                {
                    "comment": "Hex color value without quotes",
                    "match": "(#[0-9a-fA-F]{3,8})\\b",
                    "name": "meta.color",
                    "captures": {
                        "1": { "name": "constant.other.color.saki-config" }
                    }
                }
            ]
        }
    },
    "uuid": "b5c0a4e0-5c9f-11ee-9b76-0242ac120002"
}
