{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "SakiConfig",
    "scopeName": "source.skc",
    "patterns": [
        {
            "include": "#configs"
        },
        {
            "include": "#properties"
        },
        {
            "include": "#values"
        },
        {
            "include": "#colors"
        }
    ],
    "repository": {
        "configs": {
            "patterns": [
                {
                    "name": "keyword.control.skc",
                    "match": "^(base_screen|base_textbutton):"
                }
            ]
        },
        "properties": {
            "patterns": [
                {
                    "name": "entity.name.tag.skc",
                    "match": "\\b(size|color)\\b"
                }
            ]
        },
        "values": {
            "patterns": [
                {
                    "name": "string.unquoted.skc",
                    "match": "(?<=\\=)\\s*\\w+"
                }
            ]
        },
        "colors": {
            "patterns": [
                {
                    "name": "constant.numeric.hex.skc",
                    "match": "#[0-9a-fA-F]{6}"
                }
            ]
        }
    }
} 